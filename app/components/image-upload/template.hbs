<form id="multipart-form-data" enctype="multipart/form-data" id="new-pattern" {{ action 'createPattern' on='submit' }}>
  <fieldset>
    <legend>Image-Upload Component</legend>
    <label>
      Quilt Size
      <input type="text" name="pattern[quilt_size]">
    </label>
    <label>
      Upload
      <input type="file" name="pattern[pattern_image]">
    </label>
    <input type="submit" name="submit" value="Upload">
  </fieldset>
</form>